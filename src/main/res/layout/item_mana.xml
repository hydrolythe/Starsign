<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mana"
            type="com.example.starsign.database.Mana"/>
        <variable
            name="amount"
            type="Integer"/>
    </data>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mananame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{mana.toString()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/costdescriptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manaamount"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/amountlabel"/>

        <TextView
            android:id="@+id/amountlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{amount.toString()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</layout>