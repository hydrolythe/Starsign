<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
<data>
    <variable
        name="spellattribute"
        type="com.example.starsign.database.Mana"/>
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/manacheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{spellattribute.toString()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/manaamountlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manaamount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/manacheckBox"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/manaamounttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/manaamountlabel"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="Set here how much of that mana is required"
            tools:ignore="LabelFor"
            tools:targetApi="o" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>